@require './assets/styles/variables.styl'

html
  font-size: 17px

.works__items
  margin-left: -2px

.work
  width 20%
  border-left 2px solid transparent
  border-bottom 2px solid transparent
  &__box-image
    overflow: hidden
    position relative
    &:after
      content: ''
      position absolute
      width 100%
      height 100%
      top 0
      left 0
      background-color: rgba(#000000, 0.2)
      z-index 1
      transition: all .3s
  &__icon
    position absolute
    z-index 3
    top 50%
    left 50%
    background-color: rgba(#000, 0.3)
    padding 30px 30px
    border-radius: 50%
    transform: translate(-50%, -50%)
    opacity: 0
    transition: all .5s
    svg
      width 50px
      height: 50px
      color #eee
  &__item
    display block
    font-size 0
  &__image
    width 100%
    transition: all .7s
  &:hover
    .work__icon
      opacity: 1
    // .work__image
    //   transform: scale(1.1)
    .work__box-image:after
      opacity 0
  &__button
    padding 10px 5px
    background $gradient-theme
    &_text
      text-transform uppercase
      font-size 10px
      text-align: center
      color #eee
      font-weight: 600
  &__line
    border 1px solid #eee
    width 80%
    margin: 0 auto 10px auto
  &__title
    color #eee
    font-weight 400
    &_thumb
      text-align center

.background__dark
  background-color $background-dark

.__cov-progress
  background-image: $gradient-theme !important

.btn
  background $gradient-theme
  width 80%
  margin 0 auto
  padding 8px 14px
  text-align center
  font-weight 500
  color #eee
  font-size 1rem
  display block
  width: 100%
  transition all .5s
  &:hover
    box-shadow: 0px 4px 28px 0px rgba(238, 238, 238, .4)
  &__6
    width 60%
  &__works
    margin 70px auto 70px
@require './assets/styles/_media.styl'
